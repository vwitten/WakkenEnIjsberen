<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvPlayerScores_selectPlayerScoresFragment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnRevert_selectPlayerScoresFragment" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:srcCompat="@android:drawable/ic_menu_revert"
        android:id="@+id/btnRevert_selectPlayerScoresFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/stringIbtnRevert"
        android:alpha="0.75"/>
</RelativeLayout>