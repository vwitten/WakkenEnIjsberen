<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_revert"
        android:id="@+id/btnRevert_selectPlayerScoresFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/stringIbtnRevert"
        android:alpha="0.75"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_below="@+id/btnRevert_selectPlayerScoresFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lvPlayerScores_selectPlayerScoresFragment"
        android:layout_height="wrap_content" />
</RelativeLayout>